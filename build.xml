			<filelist dir="${source.dir}" files="MW.js" />
			<fileset dir="${source.dir}" includes="**/*.js" excludes="MW.js" />
		</concat>
		<jscomp
			compilationLevel="advanced"
			debug="false"
			output="${build.compiled.dir}/monkeyworld.js"
			warning="verbose">

